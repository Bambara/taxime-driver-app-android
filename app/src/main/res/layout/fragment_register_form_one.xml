<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout_register_form_one_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snap.register.RegisterFormOneFragment">



    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--            <de.hdodenhof.circleimageview.CircleImageView-->
            <!--                android:id="@+id/profileImage"-->
            <!--                android:layout_width="112dp"-->
            <!--                android:layout_height="112dp"-->
            <!--                android:background="?attr/selectableItemBackgroundBorderless"-->
            <!--                android:clickable="true"-->
            <!--                android:focusable="true"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintHorizontal_bias="0.498"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent"-->
            <!--                app:layout_constraintVertical_bias="0.04000002" />-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/selectProfileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:cropToPadding="false"
                android:focusable="true"
                android:src="@drawable/ic_user_avatar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.04000002" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectProfileImage"
                app:layout_constraintVertical_bias="0.04000002" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_register_edit_text"
                android:ems="10"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/ashThree"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_register_edit_text"
                android:clickable="true"
                android:ems="10"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center_horizontal"
                android:paddingTop="14dp"
                android:hint="@string/date_of_birth"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textColorHint="@color/ashThree"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/first_name"
                app:layout_constraintStart_toStartOf="@+id/first_name"
                app:layout_constraintTop_toBottomOf="@+id/gender" />

            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_register_edit_text"
                android:ems="10"
                android:hint="@string/email_optional"
                android:inputType="textNoSuggestions|textPostalAddress"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/ashThree"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/first_name"
                app:layout_constraintStart_toStartOf="@+id/first_name"
                app:layout_constraintTop_toBottomOf="@+id/birthday" />

            <EditText
                android:id="@+id/mobile_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_register_edit_text"
                android:ems="10"
                android:hint="@string/enter_your_mobile_hint"
                android:inputType="phone"
                android:maxLength="10"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/ashThree"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/email"
                app:layout_constraintStart_toStartOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/nic_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_register_edit_text"
                android:ems="10"
                android:hint="@string/nic_number"
                android:inputType="textPostalAddress"
                android:maxLength="10"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/ashThree"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/email"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/mobile_number" />

            <EditText
                android:id="@+id/company_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_register_edit_text"
                android:ems="10"
                android:hint="Company Code (Default TaxiMe)"
                android:inputType="textPostalAddress"
                android:maxLength="10"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/ashThree"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/email"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/nic_number" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_register_edit_text"
                android:ems="10"
                android:hint="@string/last_name"
                android:inputType="textPersonName"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="@color/ashThree"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/first_name"
                app:layout_constraintStart_toStartOf="@+id/first_name"
                app:layout_constraintTop_toBottomOf="@+id/first_name" />

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/last_name"
                app:layout_constraintStart_toStartOf="@+id/last_name"
                app:layout_constraintTop_toBottomOf="@+id/last_name">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/male"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/female"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RadioGroup>

            <ImageView
                android:id="@+id/first_name_error"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/first_name"
                app:layout_constraintStart_toEndOf="@+id/first_name" />

            <ImageView
                android:id="@+id/profileImageError"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/selectProfileImage"
                app:layout_constraintStart_toEndOf="@+id/selectProfileImage" />

            <ImageView
                android:id="@+id/last_name_error"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/last_name"
                app:layout_constraintStart_toEndOf="@+id/last_name" />

            <ImageView
                android:id="@+id/dob_error"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/birthday"
                app:layout_constraintStart_toEndOf="@+id/birthday" />

            <ImageView
                android:id="@+id/email_error"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/email"
                app:layout_constraintStart_toEndOf="@+id/email" />

            <ImageView
                android:id="@+id/mobile_number_error"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/mobile_number"
                app:layout_constraintStart_toEndOf="@+id/mobile_number" />

            <ImageView
                android:id="@+id/nic_number_error"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/nic_number"
                app:layout_constraintStart_toEndOf="@+id/mobile_number" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>